{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}

{{!-- not devoured --}}
<h2>Burgers not yet tried:</h2>
<ul>
	{{#each burgers}}
	{{#unless devoured}}
{{burger_name}}

	
	{{/unless}}
	{{/each}}
</ul>
{{!-- devoured --}}
<h2>Burgers I've eaten:</h2>

<ul>
	{{#each burgers}}
	{{#if devoured}}
	{{> devoured }}
	{{/if}}
	{{/each}}
</ul>
{{!-- add a burger --}}
<h2>Add a burger:</h2>
<form class="create-form">

	<div class="form-group">
		<label for="burg">Burger name:</label>
		<input type="text" id="burg" name="name">
	</div>

	<div class="form-group">
		<label for="devour">Devoured?</label>
		<br>
		<input type="radio" name="devour" value="1" checked> Devoured
		<br>
		<input type="radio" name="devour" value="0"> Uneaten 
	</div>

	<button type="submit">Add burger</button>
	{{!-- create file for ajax call --}}

</form>